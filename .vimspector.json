{
    "adapters": {
        "lldb": {
            "command": ["lldb-vscode-14"]
        }
    },
    "configurations": {
        "AllTests": {
            "adapter": "lldb",
            "filetypes": [ "cpp" ],
            "configuration": {
                "request": "launch",
                "program": "${workspaceRoot}/test/build/tests",
                "cwd": ".",
                "externalConsole": true,
                "MIMode": "lldb"
            }
        },
        "FilteredTests": {
            "adapter": "lldb",
            "filetypes": [ "cpp" ],
            "configuration": {
                "request": "launch",
                "program": "${workspaceRoot}/test/build/tests",
                "args": ["--gtest_filter=*"],
                "cwd": ".",
                "externalConsole": true,
                "MIMode": "lldb"
            }
        }

    }
}
